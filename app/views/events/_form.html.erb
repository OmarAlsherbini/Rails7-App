<%= form_with(model: event, class: "contents", data: { turbo: false }) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :month_app_id %>
    <%= form.text_field :month_app_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :all_day %>
    <%= form.check_box :all_day, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :overwritable %>
    <%= form.check_box :overwritable, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :start_day%>
    <%= form.date_field :start_day, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5 w-32">
    <%= form.label :start_time %>
    <%= form.select :start_time, @timeslots_available, class: "w-28" %>
  </div>  

  <div class="my-5">
    <%= form.label :end_day %>
    <%= form.date_field :end_day, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5 w-32">
    <%= form.label :end_time %>
    <%= form.select :end_time, @timeslots_available, class: "w-28" %>
  </div>  

  <div class="my-5">
    <%= form.label :event_type %>
    <%= form.number_field :event_type, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :event_details %>
    <%= form.text_field :event_details, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :event_value %>
    <%= form.number_field :event_value, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
