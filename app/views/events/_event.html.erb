<div id="<%= dom_id event %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Month app:</strong>
    <%= event.month_app_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= event.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">All day:</strong>
    <%= event.all_day %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= event.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End date:</strong>
    <%= event.end_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Event type:</strong>
    <%= event.event_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Event details:</strong>
    <%= event.event_details %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Event value:</strong>
    <%= event.event_value %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this event", event, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this event', edit_event_path(event), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
