<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Calendar apps</h1>
    <% if @calendar_apps.blank? %>
      <%= link_to 'New calendar app', new_calendar_app_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>
  <div>
  <% if current_user %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-brown-500 font-medium rounded-lg inline-block">Logged In User Info:</p>
    <%= current_user.to_json %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-brown-500 font-medium rounded-lg inline-block">Logged In User JWT:</p>
    <%= @user.to_json %>
  <% end %>
  
  </div>
  <div id="calendar_apps" class="min-w-full">
    <%= render @calendar_apps %>
  </div>
</div>
