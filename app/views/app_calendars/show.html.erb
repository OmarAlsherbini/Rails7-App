<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @app_calendar %>
    <p>Calendar: <%= link_to @app_calendar.id, @app_calendar, class: "text-teal-700" %></p>
    <br/>
    <% @app_calendar.app_years.each do |a_year| %>
      <%= render a_year.yr %>
   <%end %>
    <%= link_to 'Edit this app_calendar', edit_app_calendar_path(@app_calendar), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this app_calendar', app_calendar_path(@app_calendar), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to app_calendars', app_calendars_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
